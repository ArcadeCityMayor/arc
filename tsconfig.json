{
  // This configuration extends the base TypeScript configuration for Expo projects
  "extends": "expo/tsconfig.base.json",

  "compilerOptions": {
    // Allow implicit any
    "noImplicitAny": false,

    // Enable all strict type checking options
    "strict": true,

    // Enable strict null checks
    "strictNullChecks": true,

    "baseUrl": "./",
    "paths": {
      "app/*": ["./src/*"],
      "i18n": ["src/i18n"],
      "i18n/*": ["src/i18n/*"],
      "lib": ["src/lib"],
      "lib/*": ["src/lib/*"],
      "navigation": ["src/navigation"],
      "navigation/*": ["src/navigation/*"],
      "services/*": ["src/services/*"],
      "stores/*": ["src/stores/*"],
      "stores": ["src/stores"],
      "views/*": ["src/views/*"]
    }
  }
}
