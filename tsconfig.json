{
  // This configuration extends the base TypeScript configuration for Expo projects
  "extends": "expo/tsconfig.base.json",

  "compilerOptions": {
    // Allow implicit any
    "noImplicitAny": false,

    // Enable all strict type checking options
    "strict": true,

    // Enable strict null checks
    "strictNullChecks": true,

    "paths": {
      "app/*": ["./src/*"]
    }
  }
}
